{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ESNext",
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
